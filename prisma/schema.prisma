generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ブログ記事のモデル
model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("posts")
}

// 問い合わせのモデル
model Contact {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  message    String
  receivedAt DateTime @default(now()) @map("received_at")

  @@map("contacts")
}